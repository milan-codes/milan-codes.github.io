---
import ArrowUpRight from "./ArrowUpRight.astro";
import type { Project } from "./Projects.astro";

interface Props {
  project: Project;
}

const { project } = Astro.props;
const { name, tags, link } = project;
---

<div
  class="flex justify-between text-gray-600 dark:text-gray-400 my-2 lowercase"
>
  <a
    class="inline-flex items-center hover:underline"
    href={link}
    target="_blank"
    rel="noreferrer"
  >
    {name}
    <ArrowUpRight />
  </a>
  {tags.join(", ")}
</div>
